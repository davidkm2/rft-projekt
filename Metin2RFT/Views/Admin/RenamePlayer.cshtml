@model Metin2RFT.Models.RenamePlayerModel

@{
    ViewBag.Title = "Játékos átnevezése";
}

<h2>Játékos átnevezése</h2>
@using (Html.BeginForm())
{
    <div>@Model.Player.Name</div>
    <div class="search-bar">
        @Html.TextBoxFor(model => model.NewName)
        @Html.HiddenFor(model => model.Player)
        <input type="submit" value="Átnevez" class="search-button" />
    </div>
}