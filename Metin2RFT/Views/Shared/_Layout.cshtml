<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href=" /login.css" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title | Metin2RFT</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <header>
        Metin2RFT
        <hr />
    </header>
    <div class="welcome">
        <h2>Welcome to our RFT Project!</h2>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - Metin2RFT</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
