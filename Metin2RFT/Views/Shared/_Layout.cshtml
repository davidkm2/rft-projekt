<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Metin2RFT</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <header>
        Metin2RFT
        <hr />
    </header>
    <div class="welcome">
        <h2>Welcome to our RFT Project!</h2>
        <div class="navigation">
            <ul>
                <li><a href="/Home/Index" class="home">Home</a></li>
                <li><a href="/Player/Rankings" class="ranking">Ranglista</a></li>
                <li><a href="/Account/Register" class="register">Regisztráció</a></li>
                <li><a href="/Home/Download" class="download">Letöltések</a></li>
                <li><a href="/Home/Contacts" class="contacts">Kapcsolat</a></li>
                <li><a href="/Account/Login" class="login">Bejelentkezés</a></li>
            </ul>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - Metin2RFT</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
